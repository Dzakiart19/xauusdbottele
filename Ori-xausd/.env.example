# ============================================================
# XAUUSD TRADING BOT - Environment Variables
# ============================================================
# Copy file ini ke .env dan isi dengan nilai yang sesuai
#
# WAJIB diisi:
# - TELEGRAM_BOT_TOKEN
# - AUTHORIZED_USER_IDS
#
# Yang lain sudah ada default yang bagus, bisa diubah kalau perlu
# ============================================================

# ==================== TELEGRAM CONFIGURATION ====================
# Token dari @BotFather di Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# User ID Telegram yang diizinkan menggunakan bot (pisahkan dengan koma)
# Untuk mendapatkan user ID: https://t.me/userinfobot
AUTHORIZED_USER_IDS=123456789,987654321

# Webhook Mode (true = webhook, false = polling)
# Default: false (polling mode)
TELEGRAM_WEBHOOK_MODE=false

# Webhook URL (hanya diperlukan jika TELEGRAM_WEBHOOK_MODE=true)
# Ganti dengan URL publik server Anda + /webhook
# Contoh: https://your-replit-url.repl.co/webhook
WEBHOOK_URL=https://your-replit-url.repl.co/webhook

# ==================== INDICATOR SETTINGS ====================
# EMA Periods (pisahkan dengan koma)
EMA_PERIODS=5,10,20

# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD_LEVEL=30
RSI_OVERBOUGHT_LEVEL=70

# Stochastic Settings
STOCH_K_PERIOD=14
STOCH_D_PERIOD=3
STOCH_SMOOTH_K=3
STOCH_OVERSOLD_LEVEL=20
STOCH_OVERBOUGHT_LEVEL=80

# ATR Period
ATR_PERIOD=14

# Volume Threshold (0.5 = 50% dari rata-rata volume)
VOLUME_THRESHOLD_MULTIPLIER=0.5

# ==================== RISK MANAGEMENT ====================
# Stop Loss (dalam kelipatan ATR)
SL_ATR_MULTIPLIER=1.0
DEFAULT_SL_PIPS=20.0

# Take Profit (Risk:Reward ratio)
TP_RR_RATIO=1.5
DEFAULT_TP_PIPS=30.0

# Maximum spread yang diizinkan (dalam pips)
MAX_SPREAD_PIPS=10.0

# Risk per trade (dalam persen dari balance)
RISK_PER_TRADE_PERCENT=0.5

# Daily loss limit (dalam persen)
DAILY_LOSS_PERCENT=3.0

# Maximum trades per day
MAX_TRADES_PER_DAY=999999

# ==================== SIGNAL SETTINGS ====================
# Cooldown antara sinyal (dalam detik)
# Auto mode: 30 detik (lebih cepat, untuk catch momentum)
# Manual mode: tidak ada cooldown (on-demand)
SIGNAL_COOLDOWN_SECONDS=30

# ==================== CHART SETTINGS ====================
# Auto-delete charts setelah dikirim ke Telegram
CHART_AUTO_DELETE=true

# Waktu expiry untuk chart (dalam menit)
CHART_EXPIRY_MINUTES=60

# ==================== SYSTEM SETTINGS ====================
# Database path
DATABASE_PATH=data/bot.db

# WebSocket disconnect alert threshold (dalam detik)
WS_DISCONNECT_ALERT_SECONDS=30

# Health check port (untuk Koyeb/Docker)
HEALTH_CHECK_PORT=8080

# Dry run mode (true = tidak akan kirim real trades)
DRY_RUN=false

# ==================== CONSTANTS (JANGAN DIUBAH) ====================
# XAUUSD pip value (fixed)
# XAUUSD_PIP_VALUE=10.0

# Lot size (fixed)
# LOT_SIZE=0.01
